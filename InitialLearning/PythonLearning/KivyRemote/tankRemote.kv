BoxLayout:
    orientation:'vertical'

    MDToolbar:
        title: 'Kivy Remote'
        md_bg_color: .2, .2, .2, 1
        specific_text_color: 1, 1, 1, 1

    MDBottomNavigation:
        panel_color: .2, .2, .2, 1

        MDBottomNavigationItem:
            name: 'Drive screen'
            text: 'Drive'
            icon: 'truck'

            MDGridLayout:
                adaptive_height: True
                adaptive_width: True
                cols: 3
                spacing: 30
                pos_hint: {'center_x':.5, 'center_y': .5}

                Widget:

                MDFloatingActionButton:
                    icon: "arrow-up"
                    text: "Forward"
                    on_press: app.send_drive_command(100, 100)
                    on_release: app.send_stop()

                Widget:


                MDFloatingActionButton:
                    icon: "arrow-left"
                    on_press: app.send_drive_command(-100, 100)
                    on_release: app.send_stop()

                Widget:
                # MDFloatingActionButton:
                #     icon: "stop"
                #     md_bg_color: app.theme_cls.primary_color
                #     on_press: app.send_stop()

                MDFloatingActionButton:
                    icon: "arrow-right"
                    on_press: app.send_drive_command(100, -100)
                    on_release: app.send_stop()
                
                Widget:

                MDFloatingActionButton:
                    icon: "arrow-down"
                    on_press: app.send_drive_command(-100, -100)
                    on_release: app.send_stop()

                Widget:

        MDBottomNavigationItem:
            name: 'Servo screen'
            text: 'Servos'
            icon: 'wiper'
            BoxLayout:
                orientation: 'vertical'
                padding: 30
                
                MDLabel:
                    text: '11: Camera Servo'
                    halign: 'left'
                    
                MDSlider:
                    min: 0
                    max: 60
                    value: 0
                    on_value: app.send_camera_tilt(round(self.value))

                MDLabel:
                    text: '12: Joint 1'
                    halign: 'left'
                    
                MDSlider:
                    min: -90
                    max: 90
                    value: 0
                    on_value: app.send_joint_angle(1, round(self.value))

                MDLabel:
                    text: '13: Joint 2'
                    halign: 'left'
                    
                MDSlider:
                    min: -90
                    max: 90
                    value: 0
                    on_value: app.send_joint_angle(2, round(self.value))

                MDLabel:
                    text: '14: Joint 3'
                    halign: 'left'
                    
                MDSlider:
                    min: -90
                    max: 90
                    value: 0
                    on_value: app.send_joint_angle(3, round(self.value))

                MDLabel:
                    text: '15: Gripper'
                    halign: 'left'
                    
                MDSlider:
                    min: 0
                    max: 2
                    value: 0.75
                    on_touch_up: app.send_gripper_distance(round(self.value,2))
                    # on_value: app.send_gripper_distance(round(self.value,2))

        MDBottomNavigationItem:
            name: 'Sensor screen'
            text: 'Sensors'
            icon: 'gauge'
            BoxLayout:
                orientation: 'vertical'
                padding: 30

                MDLabel:
                    text: 'Ultrasonic'
                    halign: 'left'

                MDLabel:
                    id: ultrasonic_value_label
                    text: '???'
                    halign: 'center'

                MDLabel:
                    text: 'Line Sensor'
                    halign: 'left'

                MDLabel:
                    id: line_sensor_value_label
                    text: '???'
                    halign: 'center'
